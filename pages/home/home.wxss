
 Page {
  background-color: #f0f0f0;
  height:100%;
} 

button{
  background-color:white;
  text-align: left;
  border:0px solid white;
  border-radius:0px;
  margin-left: 0px;
  margin-right:0px;
  margin-top:4px;
  padding:0px 0px; 
  line-height:normal;
}

button::after{
  border:0px solid white;
}

.infoBtn{
  position: relative;
  display:flex;
  width:100%;
  margin-top:3%;
  padding:1% 4%;
}
.photo{
  float: left;
  margin-top: 3px;
  width: 45px;
  height: 45px;
  border: 0px solid #bebdbd;
  background-position: center;
  background-repeat: no-repeat;
  background-size: cover;
  border-radius: 4px;
}

.rightView{
  width:80%;
  padding-left:3%;
}

.name{
  width:100%;
  font-family: Microsoft YaHei;
  font-size: 17px;
  color: #6b6868;
  text-overflow : ellipsis; 
  white-space : nowrap; 
}

.address{
  font-size:14px;
  width:100%;
  color:#5B6A92;
  text-overflow:ellipsis;
  white-space:nowrap;
  overflow:hidden;
  padding-top:1px;
}

.rightInfoImg{
  width:20px;
  height:20px;
  position: absolute;
  top: 17px;
  left: 92%;
  font-size: 16px;
  color: #bebdbd;
}

.rightImg{
  width:20px;
  height:20px;
  position: absolute;
  top: 13px;
  left: 92%;
  font-size: 16px;
  color: #bebdbd;
}

.funcBtn{
  position: relative;
  display:flex;
  width:100%;
  margin-top:3%;
  padding: 1% 4%;
}

.funcBtnForMymessage{
  position: relative;
  display:inline-table;
  width:100%;
  margin-top:3%;
  padding: 1% 4%;
}

.iconStyle{
  width:24px;
  height:24px;
  margin-top:7px;
}

.wordsStyle{
  line-height:2.2;
  font-family:Microsoft yahei;
  font-size:17px;
  color:#444343;
  padding-left:15px;
}

.cacheSizeSpan{
	float:right;
	margin-top:7px;
	padding-right:8px;
	font-size:15px;
	color:#7B7B7B;
}

/* 断网处理 */
.errorPage{
	width:100%;
	height:650px;
	background-color:white;
	position: fixed;
	z-index: 1200;
	top:0;
}

.signalImg{
	position: absolute;
    top: 5%;
    left: 40%;
    width: 20%;
    height:12%;
    text-align:center;
}

.tipWords{
	position: absolute;
    top: 25%;
    left: 10%;
    height: 5%;
    width: 80%;
    text-align: center;
}

.reloadPage{
	position: absolute;
    top: 40%;
    left: 37%;
    height: 4%;
    width: 26%;     
    border: 1px solid #b1afaf;
    border-radius: 3px;
    color: #7b7979;
    text-align: center;
    line-height: 1.8;
}
navigator {background:#ffffff;}
